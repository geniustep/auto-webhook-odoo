<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Webhook Event Tree View -->
    <record id="webhook_event_view_tree" model="ir.ui.view">
        <field name="name">webhook.event.tree</field>
        <field name="model">webhook.event</field>
        <field name="arch" type="xml">
            <tree string="Webhook Events" decoration-success="status=='sent'" decoration-danger="status=='failed'" decoration-warning="status=='pending'" decoration-muted="status=='dead'">
                <field name="timestamp"/>
                <field name="model"/>
                <field name="record_id"/>
                <field name="event"/>
                <field name="priority" widget="badge" decoration-danger="priority=='high'" decoration-warning="priority=='medium'" decoration-info="priority=='low'"/>
                <field name="category"/>
                <field name="status" widget="badge"/>
                <field name="retry_count"/>
                <field name="subscriber_id"/>
                <field name="error_message" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Webhook Event Form View -->
    <record id="webhook_event_view_form" model="ir.ui.view">
        <field name="name">webhook.event.form</field>
        <field name="model">webhook.event</field>
        <field name="arch" type="xml">
            <form string="Webhook Event">
                <header>
                    <button name="action_retry_now" string="Retry Now" type="object" attrs="{'invisible': [('can_retry', '=', False)]}" class="btn-primary"/>
                    <button name="action_mark_dead" string="Move to Dead Letter" type="object" attrs="{'invisible': [('status', 'not in', ['pending', 'failed'])]}" class="btn-warning"/>
                    <field name="status" widget="statusbar" statusbar_visible="pending,processing,sent"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-refresh" name="action_retry_now" type="object" attrs="{'invisible': [('can_retry', '=', False)]}">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Retry</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="model"/>
                            <field name="record_id"/>
                            <field name="event"/>
                            <field name="timestamp"/>
                            <field name="priority"/>
                            <field name="category"/>
                        </group>
                        <group>
                            <field name="config_id"/>
                            <field name="subscriber_id"/>
                            <field name="template_id"/>
                            <field name="bridgecore_url" widget="url"/>
                        </group>
                    </group>
                    <group string="Retry Information" attrs="{'invisible': [('retry_count', '=', 0)]}">
                        <group>
                            <field name="retry_count"/>
                            <field name="max_retries"/>
                            <field name="can_retry" invisible="1"/>
                        </group>
                        <group>
                            <field name="next_retry_at"/>
                            <field name="next_retry_in"/>
                        </group>
                    </group>
                    <group string="Error Information" attrs="{'invisible': [('error_message', '=', False)]}">
                        <field name="error_type"/>
                        <field name="error_code"/>
                        <field name="error_message" nolabel="1"/>
                    </group>
                    <group string="Response Information" attrs="{'invisible': [('sent_at', '=', False)]}">
                        <group>
                            <field name="sent_at"/>
                            <field name="response_code"/>
                            <field name="processing_time"/>
                        </group>
                        <group>
                            <field name="response_body" nolabel="1" widget="text"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Payload">
                            <field name="payload" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                        <page string="Changed Fields" attrs="{'invisible': [('changed_fields', '=', False)]}">
                            <field name="changed_fields" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Webhook Event Search View -->
    <record id="webhook_event_view_search" model="ir.ui.view">
        <field name="name">webhook.event.search</field>
        <field name="model">webhook.event</field>
        <field name="arch" type="xml">
            <search>
                <field name="model"/>
                <field name="record_id"/>
                <field name="subscriber_id"/>
                <filter string="Pending" name="filter_pending" domain="[('status', '=', 'pending')]"/>
                <filter string="Failed" name="filter_failed" domain="[('status', '=', 'failed')]"/>
                <filter string="Sent" name="filter_sent" domain="[('status', '=', 'sent')]"/>
                <filter string="Dead Letter" name="filter_dead" domain="[('status', '=', 'dead')]"/>
                <separator/>
                <filter string="High Priority" name="filter_high" domain="[('priority', '=', 'high')]"/>
                <filter string="Medium Priority" name="filter_medium" domain="[('priority', '=', 'medium')]"/>
                <filter string="Low Priority" name="filter_low" domain="[('priority', '=', 'low')]"/>
                <separator/>
                <filter string="Today" name="filter_today" domain="[('timestamp', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Last 7 Days" name="filter_week" domain="[('timestamp', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Model" name="group_model" context="{'group_by': 'model'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                    <filter string="Subscriber" name="group_subscriber" context="{'group_by': 'subscriber_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'timestamp:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Webhook Event Action -->
    <record id="webhook_event_action" model="ir.actions.act_window">
        <field name="name">Webhook Events</field>
        <field name="res_model">webhook.event</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No webhook events found!
            </p>
            <p>
                Webhook events are created automatically when tracked models are modified.
                Configure webhook settings and subscribers to start tracking events.
            </p>
        </field>
    </record>

</odoo>
