        <record id="webhook_rule_sale_order_create" model="webhook.rule">
            <field name="name">Sale Orders - Create</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="operation">create</field>
            <field name="sequence">10</field>
            <field name="active" eval="True"/>
            <field name="priority">high</field>
            <field name="category">business</field>
            <field name="instant_send" eval="True"/>
            <field name="subscriber_ids" eval="[(4, ref('auto_webhook.webhook_subscriber_bridgecore'))]"/>
            <field name="description">Track new sale orders with instant push notification</field>
