<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Default BridgeCore Subscriber - Hybrid System (Pull + Push) -->
        <!-- Note: BridgeCore uses Hybrid System:
             - Pull-based: All events stored in update.webhook (BridgeCore pulls via /api/webhooks/pull)
             - Push-based: Critical events only (priority=high + instant_send=True) sent immediately -->
        <record id="webhook_subscriber_bridgecore" model="webhook.subscriber">
            <field name="name">BridgeCore Default Endpoint</field>
            <field name="endpoint_url">https://bridgecore.geniura.com/api/v1/webhooks/receive</field>
            <field name="auth_type">bearer</field>
            <field name="enabled" eval="True"/>
            <field name="active" eval="True"/>
            <field name="timeout">30</field>
            <field name="verify_ssl" eval="True"/>
            <field name="retry_enabled" eval="True"/>
            <field name="max_retries">5</field>
            <field name="notes">Push-based webhook for critical events (priority=high) only. BridgeCore uses Pull-based (update.webhook) for normal events. Auth token will be configured after BridgeCore Push endpoint is ready.</field>
        </record>

        <!-- Default Webhook Configurations for Critical Models - All Enabled by Default -->

        <!-- Sale Orders -->
        <record id="webhook_config_sale_order" model="webhook.config">
            <field name="name">Sale Orders</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="enabled" eval="True"/>
            <field name="active" eval="True"/>
            <field name="priority">high</field>
            <field name="category">business</field>
            <field name="events">create,write</field>
            <field name="instant_send" eval="True"/>
            <field name="subscribers" eval="[(4, ref('auto_webhook.webhook_subscriber_bridgecore'))]"/>
            <field name="notes">High priority webhook for sales orders. Push-based for instant delivery, Pull-based for reliability.</field>
        </record>

