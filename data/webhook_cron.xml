<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Process Pending Webhook Events -->
        <record id="cron_process_webhook_events" model="ir.cron">
            <field name="name">Webhook: Process Pending Events</field>
            <field name="model_id" ref="model_webhook_event"/>
            <field name="state">code</field>
            <field name="code">model.process_pending_events(limit=100)</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>

        <!-- Retry Failed Webhook Events -->
        <record id="cron_retry_webhook_events" model="ir.cron">
            <field name="name">Webhook: Retry Failed Events</field>
            <field name="model_id" ref="model_webhook_event"/>
            <field name="state">code</field>
            <field name="code">model.process_retries()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>

        <!-- Cleanup Old Webhook Events -->
        <record id="cron_cleanup_webhook_events" model="ir.cron">
            <field name="name">Webhook: Cleanup Old Events</field>
            <field name="model_id" ref="model_webhook_event"/>
            <field name="state">code</field>
            <field name="code">model.cleanup_old_events(days=90)</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>

        <!-- Cleanup Old Audit Logs -->
        <record id="cron_cleanup_audit_logs" model="ir.cron">
            <field name="name">Webhook: Cleanup Old Audit Logs</field>
            <field name="model_id" ref="model_webhook_audit"/>
            <field name="state">code</field>
            <field name="code">model.cleanup_old_logs(days=180)</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>

    </data>
</odoo>
